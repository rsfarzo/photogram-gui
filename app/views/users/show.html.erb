    <h1><%=@user.username%></h1>

<dl>
  <dt>ID</dt>
  <dd><%=@user.id%></dd>

  <dt>Edit user</dt>
  <dd>
    <form action="/update_user_record/<%=@user.username%>" >
      <label for="browser_username">Username</label>
      <input id="browser_username" type="text" name="input_username" placeholder="Enter a username..." value="<%=@user.username%>">

      <button>Update user</button>
    </form>
  </dd>
</dl>

<h2>Own photos (<%=@user.own_photos.size%>)</h2>

<table border="1">
  <tr>
    <th>
      Image
    </th>

    <th>
      Owner
    </th>

    <th>
      Caption
    </th>

    <th>
      Posted
    </th>

    <th></th>
  </tr>

<% @user.own_photos.each do |p| %>
  <tr>
    <td><img src="<%=p.image%>" width=40></td>
    <td><%=p.poster.username%></td>
    <td><%=p.caption%></td>
    <td><%=p.created_at%></td>
    <td><a href=photos/<%= p.id %> >Show details</a>
    </td>
  </tr>

<% end %>

</table>
